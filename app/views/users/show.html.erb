<br>
<div class="container">
  <div class="card text-center">
  <div class="card-header">
    <ul class="nav nav-pills card-header-pills">
      <li class="nav-item">
        <%= link_to " Delete account",
            @user,
            method: :delete,
            data: { confirm: 'Are you sure?', disable_with: 'deleting...' },
            class: 'nav-link far fa-trash-alt bigger-icon' %>
      </li>
    </ul>
  </div>
  <div class="card-body">
    <br>
    <h2 class="card-title fas fa-user"> Update username </h4>
    <p class="card-text">
      <%= simple_form_for current_user, url: user_path(current_user), method: :patch do |f| %>
        <%= f.input :name,
                    label: 'Username:',
                    required: true %>
        <%= f.button :submit,
                     value: 'Update name',
                     "data-disable-with" => "updating..",
                     class: "btn btn-outline-primary" %>
        <% end %>
      </p>
    </p>
    <br><hr><br>
    <h2 class="card-title fas fa-key"> Update password </h2>
    <p class="card-text">

<%= simple_form_for current_user, url: user_path(current_user), method: :patch do |f| %>
  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: "New password",
                required: true,
                autofocus: true,
                hint: "6 characters minimum.",
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: "Confirm your new password",
                required: true,
                hint: 'You will have to reconnect',
                input_html: { autocomplete: "new-password" } %>

    <%= f.button :submit,
                 value: 'Update password',
                 "data-disable-with" => "updating..",
                 class: "btn btn-outline-primary" %>
  </div>
<% end %>
    </p>
  </div>
</div>
